/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
  /* border: 1px solid black; */
}

.list {
  display: flex;
  flex-wrap: wrap;
}

.item {
  margin: 5px;
  flex-basis: calc(5rem - 10px);
  background-color: rgb(255, 255, 255);
  border-radius: 2px 2px;
  box-shadow: 2px 2px grey;
  justify-self: flex-start;
}

.item .name {
  text-align: center;
}

.mode {
  position: absolute;
  bottom: 5px;
  right: 5px;
}
