/**index.wxss**/
.container {
  width: 100%;
  height: calc(100% - 34px);
}

.grid .free {
  background-color: rgba(33, 219, 16, 0.163);
}

.grid .bound {
  background-color: rgba(194, 197, 25, 0.186);
}

.grid {
  display: flex;
  flex-wrap: wrap;
  padding: 10px;
  /* background-color: cornsilk; */
}

.grid .item {
  width: calc(25% - 6px);
  margin: 3px;
  border-radius: 3px;
  box-shadow: 3px 3px 3px rgba(128, 128, 128, 0.251);
  justify-self: flex-start;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  background-color: white;
}

.grid .item .name {
  text-align: center;
  font-size: 13px;
  padding: 6px 10px;
  font-weight: 600;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 60px;
}

.grid .item-hover .icon {
  filter: drop-shadow(0 0 7px rgba(211, 12, 184, 0.767));
}

.list .item {
  display: flex;
  padding-bottom: 8px;
  padding-top: 6px;
  margin: 0px 15px;
  padding-left: 8px;
  margin-top: 3px;
  box-shadow: 2px 2px 2px rgba(15, 26, 27, 0.404);
  border-radius: 2px;
  background-color: white;
}

.list .bound .name {
  color: rgba(219, 97, 16, 0.763);
}

.list .free .name {
  color: rgba(13, 97, 6, 0.763);
}

.list .item-hover {
  background-color: rgba(95, 158, 160, 0.212);
  margin: 5px 15px;
}

.item .icon {
  filter: drop-shadow(2px 2px 5px rgba(17, 15, 17, 0.436));
}

.list .item .content {
  margin-left: 10px;
  margin-top: 5px;
  flex: 1;
  position: relative;
}

.list .item .content .name {
  font-size: 14px;
  font-weight: bold;
  /* color: rgba(0, 0, 0, 0.719); */
  top: 2px;
}

.list .item .content .abstract {
  font-size: 12px;
  position: absolute;
  color: rgba(2, 32, 58, 0.486);
  bottom: 0px;
}

.container > .title {
  text-align: center;
  position: absolute;
  bottom: 15px;
  width: 100%;
  font-size: 18px;
  line-height: 18px;
  font-weight: 700;
}

.mode {
  position: absolute;
  bottom: 14px;
  right: 16px;
}

.information {
  position: absolute;
  bottom: 14px;
  right: calc(50% - 9px);
}

.message {
  position: absolute;
  bottom: 14px;
  left: 16px;
}
