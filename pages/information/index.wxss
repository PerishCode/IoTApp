.container {
  height: 100%;
  width: 100%;
}

.container > .title {
  text-align: center;
  position: absolute;
  bottom: 15px;
  width: 100%;
  font-size: 18px;
  line-height: 18px;
  font-weight: 700;
}

.list .item {
  font-size: 14px;
  position: relative;
  padding: 5px 0px;
}

.list .item .index {
  display: inline;
  font-weight: 700;
}

.list .item .value {
  float: right;
}

.list.small .item {
  font-size: 12px;
  position: relative;
  padding: 2px 0px;
}

.list.small .item .index {
  display: inline;
  font-weight: 600;
}

.item.className .value {
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item.operator form {
  padding: 10px 0px;
}

form button {
  font-size: 14px;
  line-height: 14px;
  box-shadow: 2px 2px 2px rgba(24, 23, 23, 0.137);
}

form input {
  border: 1px solid rgba(0, 0, 0, 0.281);
  border-radius: 2px;
  margin: 7px 0px;
  padding: 0px 5px;
}
