.item {
  border-radius: 3px;
  display: grid;
  gap: 5px;
  grid-template-columns: repeat(1fr, 20);
  grid-template-rows: repeat(1fr, 2);
  background-color: rgba(255, 255, 255, 0.788);
  margin-top: 5px;
  padding: 5px;
  padding-bottom: none;
}

.message {
  grid-row: 1/3;
  grid-column: 1/17;
}

.producer {
  grid-row: 1/2;
  grid-column: 17/20;
}

.consumer {
  grid-row: 2/3;
  grid-column: 17/20;
}

.producer .content,
.consumer .content {
  font-size: 13px;
  text-align: right;
  width: 100%;
}
